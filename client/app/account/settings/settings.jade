.container
    .row
        .col-xs-12.col-gt-xs-12
            h1 Change password
        .col-xs-12.col-gt-xs-12
            form(name='form', ng-submit='vm.changePassword(form)', novalidate='')
                .row
                    .col-xs-12.col-gt-xs-4
                        md-input-container.md-block
                            label Current password
                            input(type='password', name='password', ng-model='vm.user.oldPassword', mongoose-error='', required)
                            div.errors(ng-messages='form.password.$error', ng-show='form.$submitted')
                                div(ng-message='required') Field is required
                    .col-xs-12.col-gt-xs-4
                        md-input-container.md-block
                            label New password
                            input(type='password', name='newPassword', ng-model='vm.user.newPassword', minlength='3', mongoose-error='', required)
                            div.errors(ng-messages='form.newPassword.$error', ng-show='form.$submitted')
                                div(ng-message='required') Field is required
                                div(ng-message='minlength') Password must be at least 3 characters
                    .col-xs-12.col-gt-xs-4
                        md-input-container.md-block
                            label Confirm new password
                            input(type='password', name='confirmPassword', ng-model='vm.user.confirmPassword', match='vm.user.newPassword' minlength='3', mongoose-error='', required)
                            div.errors(ng-messages='form.confirmPassword.$error', ng-show='form.$submitted')
                                div(ng-message='required') Field is required
                                div(ng-message='minlength') Password must be at least 3 characters
                                div(ng-message='match') Password must be at least 3 characters
                .btn-container
                    button.btn.btn.btn-primary.btn-right(type='submit') Save changes
                
            
