bg-img(img='main-bg.jpg')
.container
    h1 Sign up
    form.form(name='form', ng-submit='vm.register(form)', novalidate='')
        .row
            .col-xs-12.col-gt-xs-6
                md-input-container.md-block
                    label Name
                    input(type='text', name='name', ng-model='vm.user.name', required)
                    div(ng-messages='form.name.$error')
                        div(ng-message='required') A name is required
            .col-xs-12.col-gt-xs-6
                md-input-container.md-block
                    label Email
                    input(type='email', name='email', ng-model='vm.user.email', required)
                    div(ng-messages='form.email.$error')
                        div(ng-message='required') A email is required
                        div(ng-message='email') Doesn't look like a valid email
            .col-xs-12.col-gt-xs-6
                md-input-container.md-block
                    label Password
                    input(type='password', name='password', ng-model='vm.user.password', ng-minlength='3', required)
                    div(ng-messages='form.password.$error')
                        div(ng-message='required') A password is required
                        div(ng-message='minlength') Password must be at least 3 characters.
            .col-xs-12.col-gt-xs-6
                md-input-container.md-block
                    label Confirm Password
                    input(type='password', name='confirmPassword', ng-model='vm.user.confirmPassword', match="vm.user.password", ng-minlength='3', required)
                    div(ng-messages='form.confirmPassword.$error')
                        div(ng-message='required') A confirm password is required
                        div(ng-message='match') Passwords must match

        div.btn-container
            button.btn.btn-primary.btn-register(type='submit')
                | Sign up
            = ' '
            a.btn.btn-default.btn-login(ui-sref='login')
                | Login
