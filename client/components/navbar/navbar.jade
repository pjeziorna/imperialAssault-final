div.navbar(ng-controller='NavbarController')
    div.container
        a.navbar-brand(href='/', title='imperial assault')
            img(src='assets/images/logo-sm.png', title='logo')
        
        ul.nav.navbar-right
            li(ng-if='nav.isAdmin()', ui-sref-active='active')
                a(ui-sref='admin') Admin
            li(ng-if='!nav.isLoggedIn()', ui-sref-active='active')
                a(ui-sref='signup') Sign up
            li(ng-if='!nav.isLoggedIn()', ui-sref-active='active')
                a(ui-sref='login') Login
            li(ng-show='nav.isLoggedIn()', ui-sref-active='active')
                a(ui-sref='settings', title='settings')
                    span.glyphicon.glyphicon-lg.glyphicon-settings
            li(ng-show='nav.isLoggedIn()')
                a(ui-sref='logout', title='logout')
                    span.glyphicon.glyphicon-lg.glyphicon-power
